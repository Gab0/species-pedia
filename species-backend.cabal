name:                species-backend
version:             0.1.0.0
-- synopsis:
-- description:
homepage:            https://github.com/githubuser/species-backend#readme
license:             BSD3
license-file:        LICENSE
author:              Gabriel Araujo
maintainer:          example@example.com
copyright:           2021 Gabriel Araujo
category:            Web
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     RemoteResources
                     , Types
  build-depends:       base >= 4.7 && < 5
                     , text
                     , http-conduit
                     , http-types
                     , utf8-string
                     , bytestring
                     , aeson
  default-language:    Haskell2010

executable species-backend
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , yesod
                     , yesod-form
                     , species-backend
                     , text
  default-language:    Haskell2010

test-suite species-backend-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , species-backend
                     , hspec
                     , QuickCheck
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/githubuser/species-backend
